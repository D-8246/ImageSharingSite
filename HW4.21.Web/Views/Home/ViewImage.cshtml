@model ViewImageViewModel

@if(!Model.IsAuthroized)
{
    @if(Model.Meessage != null)
    {
        <h1>@Model.Meessage</h1>
    }
    <div class="row">
        <div class="col-md-6 offset-md-3 bg-light p-4 rounded shadow">
            <h4>Please enter the password for this image:</h4>
            <form method="post" action="/home/ViewImage">
                <input type="hidden" name="id" value="@Model.Image.Id" />
                <input type="text" class="form-control" placeholder="Password" name="password" />
                <br />
                <button class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
}
else
{
    <div b-wzwicsxrru class="container">
        <main b-wzwicsxrru role="main" class="pb-3">
            <img src="/images/@Model.Image.Location" style="height:600px;" />
            
            Views: @Model.Count

        </main>
    </div>
}

